<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Infos">


    <Button
        android:id="@+id/button3"
        android:layout_width="167sp"
        android:layout_height="wrap_content"
        android:translationX="190sp"
        android:translationY="245sp"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:background="@drawable/questionsbackground"
        android:text="What is the source of the virus?" />

    <Button
        android:id="@+id/button4"
        android:layout_width="167sp"
        android:layout_height="wrap_content"
        android:background="@drawable/questionsbackground"
        android:text="How does the virus spread?"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:translationX="190sp"
        android:translationY="310sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="167sp"
        android:layout_height="wrap_content"
        android:background="@drawable/questionsbackground"
        android:text="What temperature kills the virus that causes COVID19?"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:translationX="190sp"
        android:translationY="375sp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="167sp"
        android:layout_height="wrap_content"
        android:background="@drawable/questionsbackground"
        android:text="How can I protect myself from the virus?"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:translationX="190sp"
        android:translationY="440sp" />

    <Button
        android:id="@+id/button7"
        android:layout_width="167sp"
        android:layout_height="wrap_content"
        android:background="@drawable/questionsbackground"
        android:text="Should I be tested for COVID-19?"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:translationX="190sp"
        android:translationY="505sp" />

    <Button
        android:id="@+id/button8"
        android:layout_width="167sp"
        android:layout_height="wrap_content"
        android:background="@drawable/questionsbackground"
        android:text="What I have to do if I'm sick from the virus?"
        android:textColor="#ffffff"
        android:textSize="12sp"
        android:translationX="190sp"
        android:translationY="570sp" />


    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:translationY="340sp"
        android:translationX="-50sp"
        android:scaleX="1.5"
        android:scaleY="1.5"
        app:srcCompat="@drawable/scientist" />

    <ImageView
        android:id="@+id/imageView8"
        android:translationX="65sp"
        android:translationY="-65sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/chatcloud" />

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="192sp"
        android:layout_height="90sp"
        android:scrollbarStyle="insideInset"
        android:fadeScrollbars="false"
        android:scrollbarThumbVertical="@drawable/scrollview_thumb"
        android:scrollbarTrackVertical="@drawable/vertical_scrollview_traack"
        android:translationX="170sp"
        android:translationY="50sp">

        <TextView
            android:id="@+id/text1"
            android:layout_width="165sp"
            android:layout_height="50sp"
            android:textColor="#000000"
            android:text="Hello there. I'm the smartest A.I.(kappa) chatbot in the universe.Feel free to ask me whatever questions you want from the following ones. My knowledge will save you from Coronavirus."
            android:textSize="12sp"
            android:translationX="13sp"
            />

    </ScrollView>

</RelativeLayout>