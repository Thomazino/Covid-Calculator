<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/darkbackground"
                tools:context=".Info">


    <Button
            android:id="@+id/button3"
            android:layout_width="167sp"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="#ffffff"
            android:fontFamily="@font/exo_2"
            android:textStyle="normal|bold"
            android:background="@drawable/questionsbackground"
            android:text="What is the source of the virus?"
            android:layout_alignBottom="@+id/imageView8"
            android:layout_alignParentEnd="true" android:layout_marginEnd="19dp"/>

    <Button
            android:id="@+id/button4"
            android:layout_width="167sp"
            android:layout_height="wrap_content"
            android:background="@drawable/questionsbackground"
            android:fontFamily="@font/exo_2"
            android:textStyle="normal|bold"
            android:text="How does the virus spread?"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignStart="@+id/button3"
            android:layout_centerVertical="true" android:layout_below="@+id/button3" android:layout_marginTop="10sp"/>

    <Button
            android:id="@+id/button5"
            android:layout_width="167sp"
            android:layout_height="wrap_content"
            android:background="@drawable/questionsbackground"
            android:fontFamily="@font/exo_2"
            android:textStyle="normal|bold"
            android:text="What temperature kills COVID19?"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignStart="@+id/button3"
            android:layout_alignParentBottom="false" android:layout_marginTop="10sp"
            android:layout_below="@+id/button4"/>

    <Button
            android:id="@+id/button6"
            android:layout_width="167sp"
            android:layout_height="wrap_content"
            android:background="@drawable/questionsbackground"
            android:fontFamily="@font/exo_2"
            android:textStyle="normal|bold"
            android:text="How can I protect myself from the virus?"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignParentBottom="false"
            android:layout_alignStart="@+id/button3" android:layout_below="@+id/button5"
            android:layout_marginTop="10sp"/>

    <Button
            android:id="@+id/button7"
            android:layout_width="167sp"
            android:layout_height="wrap_content"
            android:background="@drawable/questionsbackground"
            android:fontFamily="@font/exo_2"
            android:textStyle="normal|bold"
            android:text="Should I be tested for COVID-19?"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignParentBottom="false"
            android:layout_below="@+id/button6" android:layout_alignStart="@+id/button3"
            android:layout_marginTop="10sp"/>

    <Button
            android:id="@+id/button8"
            android:layout_width="167sp"
            android:layout_height="wrap_content"
            android:background="@drawable/questionsbackground"
            android:fontFamily="@font/exo_2"
            android:textStyle="normal|bold"
            android:text="What I have to do if I'm infected with the virus?"
            android:textColor="#ffffff"
            android:textSize="12sp"
            android:layout_alignStart="@+id/button3"
            android:layout_marginTop="10sp" android:layout_below="@+id/button7"/>


    <ImageView
            android:id="@+id/imageView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:translationY="135sp"
            android:translationX="-100sp"
            android:scaleX="0.9"
            android:scaleY="0.9"
            app:srcCompat="@drawable/doctor" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"/>

    <ImageView
            android:id="@+id/imageView8"
            android:layout_width="318dp"
            android:layout_height="250dp"
            app:srcCompat="@drawable/speechcloud"
            android:layout_alignParentTop="true"
            android:scaleX="0.9" android:layout_alignParentEnd="true" android:layout_marginTop="11dp"
            android:translationX="10sp"/>

    <ScrollView
            android:id="@+id/scrollView1"
            android:layout_width="194dp"
            android:layout_height="168dp"
            android:scrollbarStyle="insideInset"
            android:scrollbarThumbVertical="@drawable/scrollview_thumb"
            android:scrollbarTrackVertical="@drawable/vertical_scrollview_traack"
            android:layout_alignParentEnd="true" android:layout_marginEnd="40dp" android:layout_marginTop="20sp"
    >

        <TextView
                android:id="@+id/text1"
                android:layout_width="175sp"
                android:layout_height="80sp"
                android:textColor="#000000"
                android:fontFamily="@font/exo_2"
                android:textStyle="normal|bold"
                android:text="Hello there. I'm the smartest AI chatbot in the universe. Feel free to ask me whatever questions you want from the following ones. My knowledge will save you from Coronavirus."
                android:textSize="15sp"
                android:textAlignment="center"
                android:layout_alignParentTop="true"
        />

    </ScrollView>


</RelativeLayout>