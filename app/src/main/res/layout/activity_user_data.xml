<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/darkbackground"
                tools:context=".UserData">


    <Button
            android:id="@+id/button11"
            android:layout_width="250sp"
            android:layout_height="150sp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="450sp"
            android:textStyle="normal|bold"
            android:fontFamily="@font/exo_2"
            android:background="@drawable/questionsbackground"
            android:text="Start"
            android:textSize="30sp"
            android:textAlignment="center"/>

    <com.example.helloapp.MultiSelectionSpinner
            android:popupBackground="#000"
            android:background="@drawable/questionsbackground"
            android:id="@+id/spinner"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="255sp"
            android:layout_width="250sp"
            android:layout_height="50sp"/>

    <Spinner
            android:background="@drawable/questionsbackground"
            android:id="@+id/spinner1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="355sp"
            android:layout_width="250sp"

            android:layout_height="50sp" />



    <EditText
            android:id="@+id/editText"
            android:layout_centerHorizontal="true"
            android:layout_width="100sp"
            android:layout_height="30sp"
            android:ems="10"
            android:maxLines="1"
            android:maxLength="3"
            android:maxEms="5"
            android:hint="ex. 25"
            android:background="@drawable/questionsbackground"
            android:layout_marginTop="180sp"
            android:gravity="start|top"
            android:textStyle="normal|bold"
            android:fontFamily="@font/exo_2"
            android:inputType="text|numberSigned" />

    <RadioGroup
            android:id="@+id/rd"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30sp"
            android:layout_width="130sp"
            android:layout_height="120sp">

        <RadioButton
                android:id="@+id/radioButton2"
                android:layout_width="100sp"
                android:layout_height="100sp"
                android:textColor="#fff"
                android:textSize="20sp"
                android:textStyle="normal"
                android:fontFamily="@font/exo_2"
                android:text="Male" android:textColorLink="@color/colorPrimary"
                android:textColorHint="@android:color/background_light"
                android:textColorHighlight="@android:color/background_light"/>

        <RadioButton
                android:id="@+id/radioButton"
                android:textColor="#fff"
                android:layout_width="100sp"
                android:layout_height="40sp"
                android:layout_marginTop="-30sp"
                android:textSize="20sp"
                android:textStyle="normal"
                android:fontFamily="@font/exo_2"
                android:text="Female"/>
    </RadioGroup>

    <TextView
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:textStyle="normal|bold"
            android:fontFamily="@font/exo_2" android:visibility="visible"
            android:text="Enter your sex:" android:textAlignment="center"
            android:layout_marginTop="31dp"/>

    <TextView
            android:id="@+id/textView3"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_marginTop="140sp"
            android:textStyle="normal|bold"
            android:fontFamily="@font/exo_2"
            android:text="Enter your age (0-120):" android:visibility="visible" android:textAlignment="center"/>

    <TextView
            android:id="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_marginTop="220sp"
            android:textStyle="normal|bold"
            android:fontFamily="@font/exo_2" android:visibility="visible"
            android:text="Enter your chronic disease:" android:textAlignment="center"/>

    <TextView
            android:visibility="invisible"
            android:id="@+id/textView6"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:textSize="14sp"
            android:textColor="#de2020"
            android:textAlignment="center"
            android:layout_marginTop="430sp"
            android:textStyle="normal|bold"
            android:fontFamily="@font/exo_2"
            android:text="*PLEASE fill out EVERYTHING correct*" />




    <TextView
            android:id="@+id/textView5"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="100sp"
            android:textSize="20sp"
            android:textColor="#fff"
            android:layout_marginTop="325sp"
            android:textStyle="normal|bold"
            android:fontFamily="@font/exo_2" android:visibility="visible"
            android:text="Enter your Country:" />

    <ImageView
        android:scaleY="0.4"
        android:scaleX="0.4"
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:layout_marginLeft="215sp"
        android:layout_marginTop="265sp"

        />

    <ImageView
        android:scaleY="0.4"
        android:scaleX="0.4"
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="30sp"
        app:srcCompat="@android:drawable/arrow_down_float"
        android:layout_marginLeft="215sp"
        android:layout_marginTop="365sp"

        />

</RelativeLayout>